<% include ./partials/header %>

<div class="blogs-container">
    <div class="blogs-divided">
        <div class="each-blog">
            <a href="/blogs/<%= blog._id %>" class="blog-title"><h1><%= blog.title %></h1></a>
            <img src="<%= blog.image %>">
            <p class="blog-date"><%= blog.created.toDateString() %></p>
            <p><%- blog.body %></p>
            <div class="blog-buttons">
                <a href="/blogs/<%= blog._id %>/edit" class="btn blog-edit">Edit</a>
                <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                    <button class="btn blog-delete">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>