<% include ./partials/header %>

<div class="new-blog">
    <h1>Edit "<%= blog.title %>"</h1>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="blog-title">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" required>
        </div>
        <div class="blog-image">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="blog-content">
            <label>Blog Content</label>
            <textarea name="blog[body]" rows="7" required><%= blog.body %></textarea>
        </div>
        <input type="submit" class="btn blog-submit">
    </form>
</div>

<% include ./partials/footer %>